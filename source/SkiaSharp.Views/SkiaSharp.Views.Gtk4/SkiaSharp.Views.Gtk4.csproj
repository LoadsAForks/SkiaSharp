<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFrameworks>$(TFMCurrent)</TargetFrameworks>
    <RootNamespace>SkiaSharp.Views.Gtk</RootNamespace>
    <AssemblyName>SkiaSharp.Views.Gtk4</AssemblyName>
    <SignAssembly>false</SignAssembly>
    <PackagingGroup>SkiaSharp.Views.Gtk4</PackagingGroup>
    <DefineConstants>$(DefineConstants);__DESKTOP__;__GTK__;__GTK4__</DefineConstants>
    <Title>SkiaSharp Views &amp; Layers for GTK 4</Title>
